                android:textColor="@color/white"
                android:textSize="@dimen/txt_value" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/attribute_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="@string/label_lagu_favorit"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_label" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/lagu_favorit"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_value" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/attribute_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="@string/label_film_favorit"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_label" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/film_favorit"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_value" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/attribute_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="@string/label_pekerjaan_impian"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_label" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/pekerjaan_impian"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_value" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>